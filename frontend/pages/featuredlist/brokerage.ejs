<!DOCTYPE html>
<html lang="en">
  <%- include('../../header', { title: 'Express with EJS' }) %>
  <link
    rel="stylesheet"
    href="https://malikfarhan.com/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css"
  />
  <link
    rel="stylesheet"
    href="https://malikfarhan.com/plugins/datatables-responsive/css/responsive.bootstrap4.min.css"
  />

  <body>
    <div class="container-scroller">
      <!-- partial:partials/_navbar.html -->
      <%- include('../../navbar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_settings-panel.html -->

        <%- include('../../sidebar') %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-12">
                        <div class="card">
                          <div class="card-header">
                            <div class="d-flex justify-content-between">
                              <h3 class="card-title">Brokerages Details</h3>
                              <div class="d-flex justify-content-between">
                                <a
                                  href="/brokerage-create"
                                  class="btn btn-primary btn-sm mr-2"
                                  >Add new</a
                                >
                                <form action="" method="post" id="bulk_form">
                                  <input
                                    type="hidden"
                                    name="_method"
                                    value="get"
                                  />
                                  <input
                                    type="hidden"
                                    name="ids"
                                    value=""
                                    id="ids"
                                  />
                                  <button
                                    type="submit"
                                    id="bulk_delete"
                                    class="btn btn-danger btn-sm"
                                  >
                                    <small> Delete</small>
                                  </button>
                                </form>
                              </div>
                            </div>
                          </div>
                          <div class="card-body">
                            <div
                              id="tb1_wrapper"
                              class="dataTables_wrapper dt-bootstrap4"
                            >
                              <div class="row">
                                <div class="col-sm-12">
                                  <table
                                    id="tb1"
                                    class="table table-bordered table-striped dataTable dtr-inline"
                                    role="grid"
                                    aria-describedby="tb1_info"
                                  >
                                    <thead>
                                      <tr role="row">
                                        <th
                                          class="sorting_asc"
                                          tabindex="0"
                                          aria-controls="tb1"
                                          rowspan="1"
                                          colspan="1"
                                          aria-label="#: activate to sort column descending"
                                          aria-sort="ascending"
                                        >
                                          #
                                        </th>
                                        <th
                                          class="sorting"
                                          tabindex="0"
                                          aria-controls="tb1"
                                          rowspan="1"
                                          colspan="1"
                                          aria-label="Brokerage Name: activate to sort column ascending"
                                        >
                                          Brokerage Name
                                        </th>
                                        <th
                                          class="sorting"
                                          tabindex="0"
                                          aria-controls="tb1"
                                          rowspan="1"
                                          colspan="1"
                                          aria-label="Action: activate to sort column ascending"
                                        >
                                          Action
                                        </th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <tr role="row" class="odd">
                                        <td tabindex="0" class="sorting_1">
                                          1
                                        </td>
                                        <td>HOMELIFE PARADISE REALTY INC.</td>
                                        <td>
                                          <form
                                            action="https://malikfarhan.com/admin/brokerage/2"
                                            method="POST"
                                            id="delete-form-2"
                                          >
                                            <input
                                              type="hidden"
                                              name="_token"
                                              value="h6PUPgG3T6ZZPnV7B9uhC8NyrUu8qB765RoJ10Ul"
                                            />
                                            <input
                                              type="hidden"
                                              name="_method"
                                              value="DELETE"
                                            />
                                            <a
                                              href="#"
                                              onclick="return confirmation(2);"
                                              ><i class="fa fa-trash"></i
                                            ></a>
                                          </form>
                                        </td>
                                      </tr>
                                    </tbody>
                                    <tfoot>
                                      <tr>
                                        <th rowspan="1" colspan="1">#</th>
                                        <th rowspan="1" colspan="1">
                                          Brokerage Name
                                        </th>
                                        <th rowspan="1" colspan="1">Action</th>
                                      </tr>
                                    </tfoot>
                                  </table>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%- include('../../footer') %>
        </div>
      </div>
    </div>
    <%- include('../../foot') %>
    <script src="https://malikfarhan.com/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="https://malikfarhan.com/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://malikfarhan.com/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="https://malikfarhan.com/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script>
      $(function () {
        var t = $("#tb1").DataTable({
          responsive: true,
          autoWidth: false,
          stateSave: true,
        });
        t.on("order.dt search.dt", function () {
          t.column(0, { search: "applied", order: "applied" })
            .nodes()
            .each(function (cell, i) {
              cell.innerHTML = i + 1;
            });
        }).draw();
      });
    </script>
    <script>
      function confirmation(i) {
        if (confirm("are you sure?")) {
          let form_name = "delete-form-" + i;
          document.getElementById(form_name).submit();
        } else {
          return false;
        }
      }
    </script>
  </body>
</html>
